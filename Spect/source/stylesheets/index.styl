body{
    box-sizing: border-box;
    margin: 0;
    font-family: 'quicksand';
}

main {
    background-color: lightgrey;
    margin-left: 200px;
    display: block;
    height: 100%;
}

aside {
    z-index: 2;
    box-shadow: 1.5px 0 5px -2px #888;
    position: fixed;
    left: 0;
    top: 0;
    width 200px;
    height: 100%;
    background-color: #336699;

    text-align: center;

    h1, h2, h3, p {
        color: white;
    }

    div:first-of-type {
        background-color: lightgrey;
        padding-top: 20px;
        padding-bottom: 20px;
        
        span {
            font-size: 30px;
        }
    }
    div:nth-of-type(2){
        margin-top: 0;
        background-color: darkgrey;
        color: white;

        p {
            margin: 0;
            padding: 5px;
        }
    }
    div:nth-of-type(3){
        margin-top: 100px;

        section {
            p {
                padding-top: 10px;
                color: black;
            }
            input {
                width: 95%;
                padding-top: 5px;
                padding-bottom: 5px;
                margin-left: 3px;
                margin-right: 3px; 

            }
            button {
                width: 95%;
                padding-top: 5px;
                padding-bottom: 5px;                
            }
            background-color: lightgrey;
            height: 200px;
        }
    }
}


footer {
    width: 100%;
    height: 50%;
    border-top: 1px solid black;
    position: fixed;
    right: 0;
    bottom: 0;

    section {
        margin-left: 210px;
    }

}

@font-face {
  font-family: 'quicksand';
  src:  url('../quicksand/Quicksand-Light.otf');
}